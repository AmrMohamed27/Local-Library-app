extends layout

block content
    h1=`Genre: ${genre.name}`
    div(style='margin-left:20px;margin-top:20px')
        h4 Books
        if books.length
            dl
                each book in books
                    dt
                        a(href="/catalog/book/" + book.id)= book.title
                    dd #{book.summary}
        else
            p This genre has no books
    hr
    a(href="/catalog/genre/" + genre.id + "/delete" style="color: red;") Delete this genre
    hr
    a(href="/catalog/genre/" + genre.id + "/update" style="color: green;") Update this genre
